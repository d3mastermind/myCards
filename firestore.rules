rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to templates for all users (templates are public content)
    match /templates/{templateId} {
      allow read: if true;
      // Only allow writes through admin functions or authenticated users with admin role
      allow write: if request.auth != null;
    }
    
    // User data - only the user can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User credits subcollection - only the user can access their own credits
      match /credits/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User transactions subcollection - only the user can access their own transactions
      match /transactions/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User purchased cards subcollection - only the user can access their own purchased cards
      match /purchasedCards/{cardId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
      // User received cards subcollection - only the user can access their own received cards
      match /receivedCards/{cardId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    }
    
    // Shared cards collection - anyone can read shared cards, but only authenticated users can create them
    match /sharedCards/{shareLinkId} {
      allow read: if true; // Anyone can read shared cards
      allow write: if request.auth != null; // Only authenticated users can create/update shared cards
    }
    
    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 